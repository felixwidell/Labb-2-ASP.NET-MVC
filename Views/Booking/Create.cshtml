@model RestaurangWebAPI.Models.BookingViewModelCustomerName

@{
    ViewData["Title"] = "Create";
}

<meta name="description" content="Boka bord och tid enkelt online hos Felix Restaurang.">
<h1>Make a booking online at our restaurant</h1>

<h4>Please fill out the fields below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">Name</label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phonenumber</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TableId" class="control-label">Select a Table</label>
                @Html.DropDownListFor(model => model.TableId, (IEnumerable<SelectListItem>)ViewBag.AvailableTables, "Select a table", new { @class = "form-control" })
                <span asp-validation-for="TableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label">Booking Date</label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PeopleAmount" class="control-label">Amount of people</label>
                <input asp-for="PeopleAmount" class="form-control" />
                <span asp-validation-for="PeopleAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
